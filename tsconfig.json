{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "rootDirs": ["src"],
    "baseUrl": "./",
    "paths": {
      "Src/*": ["./src/*"],
      "Root/*": ["./*"],
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "build", "config", "webpack", "jest"]
}
